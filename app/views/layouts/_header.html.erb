<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "hoandq", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to '<i class="glyphicon glyphicon-home"></i> '.html_safe,   root_path %></li>
        
        <% if logged_in? %>
          <li><%= link_to '<i class="glyphicon glyphicon-envelope"></i> '.html_safe, notifications_path %></li>
          <li><%= link_to "#{current_user.name}", current_user %>
          <li><%= link_to "Help",   help_path %></li>
        <% if current_user.admin? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle='dropdown'>
              Options <b class ="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Templates", templates_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Steps", steps_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Time Log", log_times_path %><li>              
            </ul>  
          </li>
        <% end %>
          <li><%= link_to '<i class="glyphicon glyphicon-user"></i> '.html_safe, users_path %></li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle='dropdown'>
              Account <b class ="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to '<i class="glyphicon glyphicon-tree-deciduous">Profile</i> '.html_safe, current_user %></li>
              <li><%= link_to '<i class="glyphicon glyphicon-cog">Setting</i> '.html_safe, edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to '<i class="glyphicon glyphicon-off">Log out</i> '.html_safe, logout_path, method: "delete", id: "sign_out" %></li>
            </ul>  
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          
        <% end %>
      </ul>
    </nav>
  </div>
</header>