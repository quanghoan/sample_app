<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>      
      </section>
    </aside>
    <div class="col-md-6">
      <i class="glyphicon glyphicon-headphones"></i>
      <i class="glyphicon glyphicon-envelope"></i>
      <i class="glyphicon glyphicon-music"></i>
      <i class="glyphicon glyphicon-download-alt"></i>
      <i class="glyphicon glyphicon-th"></i>
      <i class="user"></i>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </section>  
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Sunday Monday</h1>
    <%= link_to "Sign up Steps", new_step_path %>
    <%= link_to "Sign up Templates", new_template_path %>
    <h2>
      This is the website developed by Hoandq, a fan of Ruby on Rails
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    <%# link_to "Social Accounts", authentications_path %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails logo"),
              'http://rubyonrails.org/' %>
<% end %>