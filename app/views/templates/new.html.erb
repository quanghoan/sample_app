<% provide(:title, 'Template') %>
<h1> Sign up Template </h1> 

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@template) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.label :subject %>
			<%= f.text_field :subject, class: 'form-control' %>

			<%= f.label :body %>
			<%= f.text_area :body, rows: 9, placeholder: "Compose new body..." %>

			<%= f.submit "Create template", class: "btn btn-primary" %>
		<% end %>	
		<%= link_to "Template list", templates_path, class: "btn btn-success" %>
	</div>	
</div>



