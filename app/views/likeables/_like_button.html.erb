<%= @micropost.likeables.count %>
<% if likeable = current_user.likeables.find_by(micropost_id: @micropost.id) %>
	<%= form_for likeable, html: { method: :delete }, remote: true do |f| %>
		<%= f.submit "Unlike", style: "width:70px" %>
	<% end %>
<% else %>
	<%= form_for current_user.likeables.build( micropost_id: @micropost.id), remote: true, method: :post do |f| %>
		<%= f.hidden_field :micropost_id %>
		<%= f.hidden_field :user_id %>
		<%= f.submit "Like", style: "width:70px", class: "btn btn-primary" %>
	<% end %>
<% end %>