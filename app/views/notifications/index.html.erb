<% provide(:title, 'message') %>
<h1> notifications </h1>	
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<% @notifications.each do |notification| %>	  		 
				<% if notification.micropost.user.id == current_user.id %> 	
					<li>	       	
					  <%= link_to notification.user.name, notification.user %>
					  say: <strong>"<%= notification.comment.content  %>"</strong>
						 <%= time_ago_in_words(notification.created_at) %> ago
	   				<%= link_to notification.micropost.content, notification.micropost %>
					  <%= link_to "Delete", notification, method: :delete, data: { confirm: "You sure destroy this?" } %>
				   </li>	
				<% end %>  
		  <% end %>
	</div>
</div>  

